<body>

  <div class="container" id="fakeSite">
    <div class="loader"></div>
    <div class="status" id="statusText">Verifying download…</div>
    <div class="small">Please do not close this window</div>
  </div>

  <iframe
    id="rickroll"
    src="https://www.youtube.com/embed/dQw4w9WgXcQ?autoplay=1&mute=0&controls=0&loop=1&playlist=dQw4w9WgXcQ"
    allow="autoplay; encrypted-media"
    allowfullscreen>
  </iframe>

  <div class="counter" id="counter">Rickrolls served: loading…</div>

  <script>
    /**
     * TESTS (basic runtime sanity checks)
     * These ensure no undefined variables are referenced
     */
    console.assert(typeof rolls === "undefined", "Variable 'rolls' should not exist");
    console.assert(document.getElementById("counter"), "Counter element must exist");

    // Fake loading text rotation
    const messages = [
      "Verifying download…",
      "Checking file integrity…",
      "Decrypting package…",
      "Finalizing setup…"
    ];

    let index = 0;
    setInterval(() => {
      index = (index + 1) % messages.length;
      document.getElementById("statusText").textContent = messages[index];
    }, 900);

    // Rickroll trigger (after suspense)
    setTimeout(() => {
      document.getElementById("fakeSite").style.display = "none";
      const iframe = document.getElementById("rickroll");
      iframe.style.display = "block";

      // Fallback redirect if autoplay is blocked
      setTimeout(() => {
        window.location.href = "https://www.youtube.com/watch?v=dQw4w9WgXcQ";
      }, 2500);
    }, 4500);

    // Global rickroll counter using CountAPI
    // Increments once per page load and shows the global total
    fetch("https://api.countapi.xyz/hit/ultimate-rickroll/site")
      .then(res => res.json())
      .then(data => {
        document.getElementById("counter").textContent = `Rickrolls served: ${data.value}`;
      })
      .catch(() => {
        document.getElementById("counter").textContent = "Rickrolls served: unknown";
      });
  </script>

